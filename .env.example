# AstraCore Solutions - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===================================
# SUPABASE CONFIGURATION
# ===================================
# Get these values from your Supabase project settings
# Dashboard -> Settings -> API

# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon key (public key)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME=AstraCore Solutions
VITE_APP_VERSION=1.0.0

# Application URL (for email links, etc.)
VITE_APP_URL=https://astracore.pro

# ===================================
# OPTIONAL INTEGRATIONS
# ===================================

# Email service (if using external email service)
# VITE_EMAIL_SERVICE_URL=
# VITE_EMAIL_API_KEY=

# SMS service (if using SMS notifications)
# VITE_SMS_SERVICE_URL=
# VITE_SMS_API_KEY=

# Google Maps API (if using maps integration)
# VITE_GOOGLE_MAPS_API_KEY=

# Analytics (if using Google Analytics, etc.)
# VITE_ANALYTICS_ID=

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================

# Enable development features
VITE_DEV_MODE=true

# Show debug information
VITE_DEBUG=false

# Enable mock data (for development without backend)
VITE_USE_MOCK_DATA=false

# ===================================
# SECURITY CONFIGURATION
# ===================================

# JWT secret for additional security (optional)
# VITE_JWT_SECRET=your-jwt-secret

# API rate limiting (requests per minute)
VITE_API_RATE_LIMIT=100

# Session timeout (in milliseconds)
VITE_SESSION_TIMEOUT=3600000

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================

# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for uploads
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# ===================================
# NOTIFICATION CONFIGURATION
# ===================================

# Default notification settings
VITE_NOTIFICATIONS_ENABLED=true
VITE_EMAIL_NOTIFICATIONS=true
VITE_PUSH_NOTIFICATIONS=true

# ===================================
# FEATURE FLAGS
# ===================================

# Enable/disable specific features
VITE_FEATURE_PROPERTIES=true
VITE_FEATURE_FINANCE=true
VITE_FEATURE_FLEET=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_MOBILE_APP=false

# ===================================
# DEPLOYMENT SPECIFIC
# ===================================

# Netlify specific (if deploying to Netlify)
# NETLIFY_SITE_ID=your-site-id
# NETLIFY_AUTH_TOKEN=your-auth-token

# Vercel specific (if deploying to Vercel)
# VERCEL_TOKEN=your-vercel-token

# ===================================
# EXAMPLE VALUES FOR DEVELOPMENT
# ===================================
# Uncomment and modify these for local development

# VITE_SUPABASE_URL=https://xyzcompany.supabase.co
# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# VITE_APP_ENV=development
# VITE_APP_URL=http://localhost:3000

# ===================================
# INSTRUCTIONS
# ===================================

# 1. Copy this file to .env.local
# 2. Fill in your actual Supabase values
# 3. Modify other settings as needed
# 4. Never commit .env.local to git (it's in .gitignore)
# 5. For production, set these variables in your hosting platform:
#    - Netlify: Site settings > Environment variables
#    - Vercel: Project settings > Environment Variables
#    - Other: Check your platform's documentation

# ===================================
# SECURITY NOTES
# ===================================

# - Never commit actual API keys to git
# - Use different keys for development and production
# - Supabase anon key is safe to expose (it's public)
# - Other API keys should be kept secret
# - Regularly rotate your API keys
# - Use Row Level Security in Supabase for data protection
